@model IEnumerable<TechnoShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
              Name
            </th>
            <th>
               Description
            </th>
            <th>
              Price
            </th>
            <th>
              Quantity
            </th>
            <th>
                Image
            </th>
            <th>
                PercentOfDiscount
            </th>
            <th>
               Status
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                   @string.Format("{0:#,###.##}", (item.Price))Đ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <img src="@item.Image" width="100%"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentOfDiscount)
                </td>
                <td>
                    @if (item.Status == 0)
                    {
                        <p style="color:red">InActive</p>
                    }
                    else
                    {
                        <p style="color:forestgreen">Active</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Category_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Product_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Product_ID }) |
                    @if (item.Status == 0)
                    {
                        @Html.ActionLink("Active", "Delete", new { id = item.Product_ID })
                    }
                    else
                    {
                        @Html.ActionLink("InActive", "Delete", new { id = item.Product_ID })
                    }


                </td>
            </tr>
        }
    </tbody>



</table>
